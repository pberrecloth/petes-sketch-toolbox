{
  "name": "Selection Tools",
  "description" : "A bundle of plugins for selecting stuff.",
  "author" : "Various Authors",
  "homepage": "https://github.com/pberrecloth/selection-tools-sketch-plugin-bundle",
  "version": "0.1",
  "identifier" : "com.various.selection-tools",
  "compatibleVersion": "39.1",
  "bundleVersion": 1,
  "commands" : [
    {
      "name" : "All Artboards",
      "script" : "_plugin-layer-tools/src/select.js",
      "handler" : "selectAllArtboards",
      "identifier" : "select-all-artboards"
    },
    {
      "name" : "All Layer Groups",
      "script" : "_plugin-layer-tools/src/select.js",
      "handler" : "selectAllGroups",
      "identifier" : "select-all-groups"
    },
    {
      "name" : "All Bitmap Layers",
      "script" : "_plugin-layer-tools/src/select.js",
      "handler" : "selectAllBitmapLayers",
      "identifier" : "select-all-bitmaps"
    },
    {
      "name" : "Same Fill Color",
      "script" : "_plugin-layer-tools/src/select.js",
      "handler" : "selectSameFill",
      "identifier" : "select-same-fill"
    },
    {
      "name" : "Same Border Color",
      "script" : "_plugin-layer-tools/src/select.js",
      "handler" : "selectSameBorder",
      "identifier" : "select-same-border"
    },
    {
      "name" : "Layers Starting With…",
      "script" : "_plugin-layer-tools/src/select.js",
      "handler" : "selectStartingWith",
      "identifier" : "select-starting-with"
    },
    {
      "name" : "Layers Ending With…",
      "script" : "_plugin-layer-tools/src/select.js",
      "handler" : "selectEndingWith",
      "identifier" : "select-ending-with"
    },
    {
      "name" : "Layers with Text in Name…",
      "script" : "_plugin-layer-tools/src/select.js",
      "handler" : "selectContaining",
      "identifier" : "select-containing"
    },
    {
      "name" : "Parent Artboards",
      "script" : "_plugin-layer-tools/src/select.js",
      "handler" : "selectParentArtboards",
      "shortcut" : "cmd shift a",
      "identifier" : "select-parent-artboards"
    },
  ],
  "menu" : {
    "title": "Selection Tools",
    "items" : [
      "select-parent-artboards",
      "select-all-artboards",
      "select-starting-with",
      "select-ending-with",
      "select-containing",
    ],
  }
}
