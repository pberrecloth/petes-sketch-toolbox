  "menu" : {
    "isRoot" : true,
    "items" : [
      {
        "title" : "Select",
        "items" : [
          "select-parent-artboards",
          "select-all-artboards",
          "select-starting-with",
          "select-ending-with",
          "select-containing",
        ]
      },
      {
        "title" : "Sort",
        "items" : [
          "sort-alphabetically",
          "sort-vertically",
          "sort-horizontally",
          "sort-reverse"
        ]
      },
      {
        "title" : "Toggle",
        "items" : [
          "toggle-layers",
          "toggle-layers-settings"
        ]
      },
      {
        "title" : "Rename",
        "items" : [
          "rename-selected",
          "find-and-replace",
          "rename-prepend-selected",
          "rename-append-selected"
        ]
      }
    ]
