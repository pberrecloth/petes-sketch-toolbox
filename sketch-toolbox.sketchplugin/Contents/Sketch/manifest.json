      "script" : "plugins/layer-tools/src/rename.js",
      "handler" : "findReplaceSelected",
      "identifier" : "rename-find-replace-selected"
    },
    {
      "name" : "Find and Replace in All… BROKEN",
      "script" : "plugins/layer-tools/src/rename.js",
      "handler" : "findReplaceAll",
