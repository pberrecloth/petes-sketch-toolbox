      "script" : "plugins/layer-tools/src/toggle.js",
      "handler" : "toggleLayers",
      "shortcut" : "cmd l",
      "identifier" : "toggle-layers"
    },
    {
      "name" : "Toggle Layers Settings…",
      "script" : "plugins/layer-tools/src/toggle.js",
      "handler" : "toggleLayersSettings",
      "identifier" : "toggle-layers-settings"
