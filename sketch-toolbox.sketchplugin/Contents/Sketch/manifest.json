      "script" : "plugins/layer-tools/src/rename.js",
      "handler" : "removeCopy",
      "identifier" : "rename-remove-copy"
    },
    {
      "name" : "Rename Selected",
      "identifier" : "rename-selected",
      "script" : "plugins/rename-it/renameIt.sketchscript",
      "handler" : "renameSelectedLayers",
      "shortcut" : "ctrl cmd r"
    },
    {
      "name" : "Find and Replace",
      "identifier" : "find-and-replace",
      "script" : "plugins/rename-it/findReplace.sketchscript",
      "handler" : "findReplace",
      "shortcut" : "ctrl option cmd r"
    }
