      "identifier" : "select-all-artboards"
    },
    {
      "name" : "All Layer Groups",
      "script" : "plugins/layer-tools/src/select.js",
      "handler" : "selectAllGroups",
      "identifier" : "select-all-groups"
    },
    {
      "name" : "All Bitmap Layers",
      "script" : "plugins/layer-tools/src/select.js",
      "handler" : "selectAllBitmapLayers",
      "identifier" : "select-all-bitmaps"
    },
    {
      "name" : "Same Fill Color",
      "script" : "plugins/layer-tools/src/select.js",
      "handler" : "selectSameFill",
      "identifier" : "select-same-fill"
    },
    {
      "name" : "Same Border Color",
      "script" : "plugins/layer-tools/src/select.js",
      "handler" : "selectSameBorder",
      "identifier" : "select-same-border"
    },
    {
      "name" : "Layers Starting With…",
      "script" : "plugins/layer-tools/src/select.js",
      "handler" : "selectStartingWith",
      "identifier" : "select-starting-with"
